{
    "dependencies": [
        "bcwc-pcie-git"
    ],
    "install": [
        {
            "question": "Is this computer a mac? (yes/no)",
            "variable": "{is_mac}",
            "answer": {
                "yes": [
                    "copy --su suspendHandler /usr/local/bin/suspendHandler",
                    "copy --su preSuspendHandler.service /etc/systemd/system/preSuspendHandler.service",
                    "run sudo systemctl enable preSuspendHandler",
                    "copy --su postSuspendHandler.service /etc/systemd/system/postSuspendHandler.service",
                    "run sudo systemctl enable postSuspendHandler",

                    "copy --su 10-trackpad.conf /etc/X11/xorg.conf.d/10-trackpad.conf",
                    "copy --su 20-keyboard.conf /etc/X11/xorg.conf.d/20-keyboard.conf",

                    "copy --su logind.conf /etc/systemd/logind.conf",

                    "copy --su webcam /etc/local/bin/webcam",
                    "copy --su bcwc-pcie.conf /etc/modules-load.d/bcwc-pcie.conf"
                ],
                "no": []
            }
        }
    ]
}