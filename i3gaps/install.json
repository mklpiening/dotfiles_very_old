{
    "dependencies": [
        "i3-gaps-next-git",
        "redshift",
        "polybar",
        "feh",
        "dunst",
        "rxvt-unicode",
        "rofi",
        "betterlockscreen",
        "playerctl"
    ],
    "install": [
        "copy variables ~/.config/i3/config",
        "append autostart ~/.config/i3/config",
        "append config_base ~/.config/i3/config",
        "append shortcuts_applications ~/.config/i3/config",
        {
            "question": "Install mac media shortcuts? (yes/no)",
            "variable": "{mac_media_shortcuts}",
            "answer": {
                "yes": [
                    "append shortcuts_media_mac ~/.config/i3/config"
                ],
                "no": []
            }
        },
        {
            "question": "Please enter the path to your wallpaper.",
            "variable": "{wallpaper}",
            "answer": {
                "*": [
                    "replace ~/.config/i3/config [WALLPAPER] {wallpaper}"
                ]
            }
        },
        {
            "question": "Use HiDPI scaling? (yes/no)",
            "variable": "{use_hidpi}",
            "answer": {
                "yes": [
                    "replace ~/.config/i3/config [FONTSIZE] 10"
                ],
                "no": [
                    "replace ~/.config/i3/config [FONTSIZE] 8"
                ]
            }
        },
        "copy xinitrc ~/.xinitrc"
    ]
}