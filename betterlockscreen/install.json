{
    "dependencies": [
        "betterlockscreen"
    ],
    "install": [
        {
            "question": "Please enter the path to your lockscreen wallpaper.",
            "variable": "{lockscreen_wallpaper}",
            "answer": {
                "*": [
                    "run  betterlockscreen -u {lockscreen_wallpaper} -b 2"
                ]
            }
        }
    ]
}