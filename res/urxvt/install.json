{
    "dependencies": [
        "rxvt-unicode"
    ],
    "install": [
        "copy Xdefaults ~/.Xdefaults",
        {
            "question": "Use HiDPI scaling? (yes/no)",
            "variable": "{use_hidpi}",
            "answer": {
                "yes": [
                    "append HiDPI_scaling ~/.Xdefaults"
                ],
                "no": []
            }
        }
    ]
}