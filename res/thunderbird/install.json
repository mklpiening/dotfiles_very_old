{
    "dependencies": [
        "thunderbird"
    ],
    "install": [
        {
            "question": "What is the name of your thunderbird profile? (strange directory name under ~/.thunderbird/)",
            "variable": "{thunderbird-profile}",
            "answer": {
                "*": [
                    "copy chrome ~/.thunderbird/{thunderbird-profile}/chrome"
                ]
            }
        }
    ]
}