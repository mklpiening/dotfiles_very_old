{
    "dependencies": [
        "bspwm",
        "sxhkd",
        "redshift",
        "polybar",
        "feh",
        "rxvt-unicode",
        "rofi",
        "playerctl",
        "xorg-xsetroot"
    ],
    "install": [
        "copy bspwmrc ~/.config/bspwm/bspwmrc",
        "copy sxhkdrc ~/.config/sxhkd/sxhkdrc",
        {
            "question": "Please enter the path to your wallpaper.",
            "variable": "{wallpaper}",
            "answer": {
                "*": [
                    "replace ~/.config/i3/config [WALLPAPER] {wallpaper}"
                ]
            }
        },
        {
            "question": "shat should be your hotkey (super / alt).",
            "variable": "{key}",
            "answer": {
                "alt": [
                    "replace ~/.config/sxhkd/sxhkdrc [KEY] {key}"
                ],
                "super": [                    
                    "replace ~/.config/sxhkd/sxhkdrc [KEY] {key}"
                ]
            }
        },
        "copy .dmrc ~/.dmrc",
        "copy xinitrc ~/.xinitrc"
    ]
}